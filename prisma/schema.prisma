generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Address {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  street      String
  number      String
  complement  String
  city        String
  state       String
  zipcode     String
  neiborhood  String
  phone       String
  country     String
}

model Design {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  color     String
  stamp_url String
  mock_url  String
  produto   Produto @relation(fields: [produtoId], references: [id])
  produtoId String @unique @db.ObjectId
}

model Produto {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  price       String
  discount    String
  description String
  base_sku    String
  category    String
  slug        String
  design      Design[]
}